<!DOCTYPE HTML>
<html lang="en">
<%include partials/templates/html_head%>
<body>

<%include partials/templates/header%>

<div class="container">
	<h1 class="calendar-header text-center">Season 2017/18 calendar</h1>
	<ul class="calendar-list">
	<%calendar.forEach(function(item, index){%>


		<%if (index%2===0) {%>
			<div class="row">
		<%}%>
				<div class="col-md-6">
					<%if(item.dateObj<today){%>
						<li class="calendar-list__item calendar-list__item--passed">
							<p class="completed">COMPLETED</p>
					<%} else { %>
						<li class="calendar-list__item">
					<%}%>
						<p>Date: <%=item.date%></p>
						<p>Place: <%=item.place%>, <%=item.country%></p>
						<p>Type: <%=item.type%></p>

						<p class="read-more"><a href="/">Read more</a></p>
					</li>
				</div>
			<%if (index%2) {%>
			</div>
		<%}%>
	<%});%>
	</ul>
</div>

<%include partials/templates/scripts%>
</body>
</html>
